<h1>Cadastrar uma aula</h1>

<%= form_with model: [course, lecture] do |f| %>
<div>
    <%= f.label :name %>
    <%= f.text_field :name%>
    <%if lecture.errors.full_messages_for(:name).any? %>
    <ul>
        <% lecture.errors.full_messages_for(:name).each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
    <%end%>
</div>
<div>
    <%= f.label :description %>
    <%= f.text_area :description%>
    <%if lecture.errors.full_messages_for(:description).any? %>
    <ul>
        <% lecture.errors.full_messages_for(:description).each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
    <%end%>
</div>
<div>
    <%= f.label :time %>
    <%= f.number_field :time, step: 1, min: 0%>
    <%if lecture.errors.full_messages_for(:time).any? %>
    <ul>
        <% lecture.errors.full_messages_for(:time).each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
    <%end%>
</div>
<div>
    <%= f.label :content %>
    <%= f.text_field :content%>
    <%if lecture.errors.full_messages_for(:content).any? %>
    <ul>
        <% lecture.errors.full_messages_for(:content).each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
    <%end%>
</div>
<%= f.submit 'Salvar' %>
<% end %>